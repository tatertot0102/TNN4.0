---
// FeaturesLayout.astro
const { items = [] } = Astro.props;
---

<div class="layout-features">
  <div class="features-grid">
    {items.slice(0, 3).map((item) => (
      <article class="feature-card">
        <a href={item.href} class="feature-card__link">
          <div class="feature-card__media">
            <img src={item.thumbnail} alt={item.title} loading="lazy" />
            <div class="feature-card__overlay">
              <span class="category-overlay">{item.category}</span>
            </div>
          </div>
          <div class="feature-card__content">
            <h3 class="feature-card__title">{item.title}</h3>
            <p class="feature-card__dek">{item.dek}</p>
            <div class="byline">{item.byline}</div>
          </div>
        </a>
      </article>
    ))}
  </div>
</div>

<style>
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
  }

  .feature-card {
    background: var(--surface);
    border: 3px solid var(--text);
    overflow: hidden;
    transition: transform 200ms ease;
  }

  .feature-card:hover {
    transform: translateY(-6px) rotate(-0.5deg);
  }

  .feature-card__link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  .feature-card__media {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: var(--text);
  }

  .feature-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .feature-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 50%);
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
  }

  .category-overlay {
    background: var(--midnight);
    color: #fff;
    padding: 6px 12px;
    font-size: 0.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .feature-card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature-card__title {
    font-family: var(--font-serif);
    font-size: 1.375rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
  }

  .feature-card__dek {
    font-size: 0.9375rem;
    line-height: 1.5;
    color: var(--text-muted);
    margin: 0;
  }

  .byline {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>