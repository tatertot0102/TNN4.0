---
const {
  eyebrow = "Letter from the U.K.",
  title,
  dek,
  byline,
  runtime,
  thumbnail,
  href = "#",
  variant = "mosaic", // "split" | "full" | "half" | "mosaic"
  theme = "dark",
  date,
  category,
} = Astro.props;

const isFull = variant === "full";
const isHalf = variant === "half";
const isMosaic = variant === "mosaic";
---

<section
  data-header-theme={theme}
  class:list={[
    "hero-section",
    isFull && "hero-section--full",
    isHalf && "hero-section--half",
    isMosaic && "hero-section--mosaic",
  ]}
>
  <!-- MOSAIC HERO - CINEMATIC CENTERPIECE -->
  {isMosaic && (
    <div class="hero-mosaic">
      <div class="hero-mosaic__container">
        <!-- Content Column -->
        <div class="hero-mosaic__content">
          {category && (
            <div class="hero-mosaic__category">{category}</div>
          )}
          
          <h1 class="hero-mosaic__title">{title}</h1>
          
          {dek && (
            <p class="hero-mosaic__dek">{dek}</p>
          )}
          
          <div class="hero-mosaic__meta">
            {byline && (
              <div class="hero-mosaic__byline">By {byline}</div>
            )}
            {date && (
              <div class="hero-mosaic__date">{date}</div>
            )}
          </div>
        </div>

        <!-- Video Column -->
        <a href={href} class="hero-mosaic__video">
          <div class="hero-mosaic__video-container">
            <img
              src={thumbnail}
              alt={title}
              class="hero-mosaic__video-thumb"
            />
            <div class="hero-mosaic__video-overlay"></div>
            
            <!-- Play Button -->
            <div class="hero-mosaic__play">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                <path d="M8 5v14l11-7L8 5z" fill="currentColor"/>
              </svg>
            </div>
            
            {runtime && (
              <div class="hero-mosaic__runtime">
                <svg width="10" height="10" viewBox="0 0 16 16" fill="none">
                  <path d="M3 2v12l10-6L3 2z" fill="currentColor"/>
                </svg>
                <span>{runtime}</span>
              </div>
            )}
          </div>
        </a>
      </div>

      <!-- Scroll Indicator -->
      <button class="hero-mosaic__scroll" aria-label="Scroll to Today's Mix">
        <span class="hero-mosaic__scroll-text">Today's Mix</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M19 12l-7 7-7-7"/>
        </svg>
      </button>
    </div>
  )}

  <!-- FULL BLEED HERO -->
  {isFull && (
    <a href={href} class="hero-full">
      <div class="hero-full__media">
        <img
          src={thumbnail}
          alt={title}
          class="hero-full__img"
        />
        <div class="hero-full__overlay"></div>
      </div>

      <div class="hero-full__content">
        <div class="hero-full__container">
          {runtime && (
            <div class="hero-full__runtime">
              <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
                <path d="M3 2v12l10-6L3 2z" fill="currentColor"/>
              </svg>
              <span>{runtime}</span>
            </div>
          )}
          
          <div class="hero-full__eyebrow">{eyebrow}</div>
          <h1 class="hero-full__title">{title}</h1>
          {byline && <div class="hero-full__byline">By {byline}</div>}
          {dek && <p class="hero-full__dek">{dek}</p>}
        </div>
      </div>
    </a>
  )}

  <!-- HALF-BLEED HERO -->
  {isHalf && (
    <div class="hero-half">
      <div class="hero-half__wrapper">
        <!-- Left: Collage with images -->
        <div class="hero-half__collage">
          <div class="hero-half__collage-bg"></div>
          <div class="hero-half__collage-main">
            <img
              src={thumbnail}
              alt={title}
              class="hero-half__collage-img"
            />
          </div>
          <div class="hero-half__collage-accent-1"></div>
          <div class="hero-half__collage-accent-2"></div>
          <div class="hero-half__collage-accent-3"></div>
          
          {runtime && (
            <div class="hero-half__runtime">
              <svg width="12" height="12" viewBox="0 0 16 16" fill="none">
                <path d="M3 2v12l10-6L3 2z" fill="currentColor"/>
              </svg>
              <span>{runtime}</span>
            </div>
          )}
        </div>

        <!-- Right: Content -->
        <a href={href} class="hero-half__content">
          <div class="hero-half__eyebrow">{eyebrow}</div>
          <h1 class="hero-half__title">{title}</h1>
          {dek && <p class="hero-half__dek">{dek}</p>}
          {byline && <div class="hero-half__byline">By {byline}</div>}
          <div class="hero-half__listen">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18V5l12-2v13M9 13c0 1.657-1.343 3-3 3s-3-1.343-3-3 1.343-3 3-3 3 1.343 3 3z"/>
            </svg>
            <span>Listen</span>
          </div>
        </a>
      </div>
    </div>
  )}

  <!-- SPLIT HERO -->
  {!isFull && !isHalf && !isMosaic && (
    <div class="hero-split">
      <div class="hero-split__grid">
        <!-- Left: Content -->
        <div class="hero-split__content">
          <div class="hero-split__eyebrow">{eyebrow}</div>
          <h1 class="hero-split__title">{title}</h1>
          {byline && <div class="hero-split__byline">By {byline}</div>}
          {dek && <p class="hero-split__dek">{dek}</p>}
        </div>

        <!-- Right: Media -->
        <a href={href} class="hero-split__media">
          <img
            src={thumbnail}
            alt={title}
            class="hero-split__img"
          />
          {runtime && (
            <div class="hero-split__runtime">
              <svg width="12" height="12" viewBox="0 0 16 16" fill="none">
                <path d="M3 2v12l10-6L3 2z" fill="currentColor"/>
              </svg>
              <span>{runtime}</span>
            </div>
          )}
        </a>
      </div>
    </div>
  )}
</section>

<style>
  :root {
    --black: #000000;
    --dark-gray: #1a1a1a;
    --medium-gray: #333333;
    --text-gray: #666666;
    --light-gray: #999999;
    --white: #ffffff;
    --orange: #d94d1a;
  }

  /* Base */
  .hero-section {
    background: var(--white);
    position: relative;
  }

  .hero-section:not(.hero-section--full):not(.hero-section--mosaic) {
    padding: clamp(3rem, 6vw, 5rem) 0;
    max-width: 1400px;
    margin: 0 auto;
    padding-left: clamp(1.5rem, 4vw, 3rem);
    padding-right: clamp(1.5rem, 4vw, 3rem);
  }

  /* ========== MOSAIC HERO - CINEMATIC ========== */
  .hero-mosaic {
    position: relative;
    background: var(--black);
    padding: clamp(4rem, 8vw, 10rem) clamp(3rem, 6vw, 8rem);
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
    margin-top: -1px;
    margin-bottom: -1px;
  }

  .hero-mosaic::before {
    content: "";
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 30%, rgba(217, 77, 26, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(26, 26, 26, 0.4) 0%, transparent 50%);
    z-index: 0;
  }

  .hero-mosaic__container {
    position: relative;
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: clamp(4rem, 8vw, 10rem);
    align-items: center;
    z-index: 1;
  }

  .hero-mosaic__content {
    color: var(--white);
  }

  .hero-mosaic__category {
    font-size: 0.6875rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--orange);
    margin-bottom: 1.5rem;
    display: inline-block;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--orange);
  }

  .hero-mosaic__title {
    font-family: "Palatino", "Georgia", serif;
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin: 0 0 1.5rem 0;
    color: var(--white);
  }

  .hero-mosaic__dek {
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 2rem 0;
    max-width: 90%;
  }

  .hero-mosaic__meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .hero-mosaic__byline {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--white);
  }

  .hero-mosaic__date {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Video */
  .hero-mosaic__video {
    display: block;
    text-decoration: none;
    position: relative;
  }

  .hero-mosaic__video-container {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--dark-gray);
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  .hero-mosaic__video-thumb {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 800ms cubic-bezier(0.19, 1, 0.22, 1);
  }

  .hero-mosaic__video:hover .hero-mosaic__video-thumb {
    transform: scale(1.05);
  }

  .hero-mosaic__video-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    opacity: 0;
    transition: opacity 400ms ease;
  }

  .hero-mosaic__video:hover .hero-mosaic__video-overlay {
    opacity: 1;
  }

  /* Play Button */
  .hero-mosaic__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 400ms cubic-bezier(0.34, 1.56, 0.64, 1);
    cursor: pointer;
  }

  .hero-mosaic__play svg {
    margin-left: 4px;
    transition: transform 300ms ease;
  }

  .hero-mosaic__video:hover .hero-mosaic__play {
    transform: translate(-50%, -50%) scale(1.15);
    background: var(--white);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  }

  .hero-mosaic__runtime {
    position: absolute;
    bottom: 16px;
    right: 16px;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(8px);
    color: var(--white);
    font-size: 0.8125rem;
    font-weight: 700;
    border-radius: 3px;
  }

  /* Scroll Indicator */
  .hero-mosaic__scroll {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 300ms ease;
    z-index: 10;
    animation: bounce 2s ease-in-out infinite;
  }

  .hero-mosaic__scroll:hover {
    color: var(--white);
    transform: translateX(-50%) translateY(4px);
  }

  .hero-mosaic__scroll-text {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(8px);
    }
  }

  /* ========== FULL BLEED HERO ========== */
  .hero-full {
    display: block;
    position: relative;
    text-decoration: none;
    color: inherit;
    background: var(--black);
  }

  .hero-full__media {
    position: relative;
    height: 85vh;
    min-height: 650px;
    max-height: 900px;
    width: 100%;
    overflow: hidden;
  }

  .hero-full__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 600ms ease;
  }

  .hero-full:hover .hero-full__img {
    transform: scale(1.02);
  }

  .hero-full__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.85) 100%
    );
  }

  .hero-full__content {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: flex-end;
  }

  .hero-full__container {
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
    padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 4vw, 3rem);
    color: var(--white);
  }

  .hero-full__runtime {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(0, 0, 0, 0.7);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .hero-full__eyebrow {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1rem;
  }

  .hero-full__title {
    max-width: 900px;
    font-family: "Palatino", "Georgia", serif;
    font-size: clamp(2.5rem, 5.5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.15;
    margin: 0 0 1rem 0;
  }

  .hero-full__byline {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .hero-full__dek {
    max-width: 700px;
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  /* ========== HALF HERO ========== */
  .hero-half {
    background: var(--white);
  }

  .hero-half__wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    min-height: 600px;
  }

  .hero-half__collage {
    position: relative;
    overflow: visible;
    background: var(--black);
  }

  .hero-half__collage-bg {
    position: absolute;
    inset: 0;
    background: var(--black);
  }

  .hero-half__collage-main {
    position: absolute;
    top: 10%;
    left: 8%;
    width: 65%;
    height: 50%;
    overflow: hidden;
    z-index: 3;
  }

  .hero-half__collage-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
  }

  .hero-half__collage-accent-1 {
    position: absolute;
    top: 0;
    right: 0;
    width: 55%;
    height: 100%;
    background: var(--orange);
    clip-path: polygon(25% 0, 100% 0, 100% 100%, 0 100%);
    z-index: 1;
  }

  .hero-half__collage-accent-2 {
    position: absolute;
    top: 5%;
    right: 8%;
    width: 180px;
    height: 80px;
    background: var(--dark-gray);
    z-index: 4;
  }

  .hero-half__collage-accent-3 {
    position: absolute;
    bottom: 12%;
    left: 5%;
    width: 140px;
    height: 100px;
    background: var(--dark-gray);
    z-index: 4;
  }

  .hero-half__collage::before {
    content: "";
    position: absolute;
    top: 35%;
    left: 25%;
    width: 280px;
    height: 2px;
    background: rgba(255, 255, 255, 0.3);
    transform: rotate(-25deg);
    z-index: 2;
  }

  .hero-half__collage::after {
    content: "";
    position: absolute;
    top: 15%;
    right: 20%;
    width: 200px;
    height: 2px;
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(-35deg);
    z-index: 2;
  }

  .hero-half__runtime {
    position: absolute;
    bottom: 20px;
    left: 20px;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(0, 0, 0, 0.85);
    color: var(--white);
    font-size: 0.8125rem;
    font-weight: 600;
    z-index: 5;
  }

  .hero-half__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: clamp(2.5rem, 5vw, 4rem);
    background: var(--white);
    text-decoration: none;
    color: inherit;
  }

  .hero-half__eyebrow {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--orange);
    margin-bottom: 1.5rem;
  }

  .hero-half__title {
    font-family: "Palatino", "Georgia", serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 400;
    line-height: 1.2;
    color: var(--black);
    margin: 0 0 1.25rem 0;
  }

  .hero-half__dek {
    font-size: 1rem;
    line-height: 1.65;
    color: var(--text-gray);
    margin: 0 0 1.5rem 0;
  }

  .hero-half__byline {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--black);
    margin-bottom: 1.5rem;
  }

  .hero-half__listen {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border: 1px solid var(--black);
    background: var(--white);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--black);
    cursor: pointer;
    transition: all 200ms ease;
    align-self: flex-start;
  }

  .hero-half__listen:hover {
    background: var(--black);
    color: var(--white);
  }

  /* ========== SPLIT HERO ========== */
  .hero-split {
    background: #fafafa;
    padding: clamp(2rem, 4vw, 3rem);
  }

  .hero-split__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(3rem, 6vw, 5rem);
    align-items: center;
  }

  .hero-split__eyebrow {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-gray);
    margin-bottom: 1.5rem;
  }

  .hero-split__title {
    font-family: "Palatino", "Georgia", serif;
    font-size: clamp(2rem, 4.5vw, 3.5rem);
    font-weight: 400;
    line-height: 1.2;
    color: var(--black);
    margin: 0 0 1rem 0;
  }

  .hero-split__byline {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--black);
    margin-bottom: 1.5rem;
  }

  .hero-split__dek {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-gray);
    margin: 0;
  }

  .hero-split__media {
    position: relative;
    display: block;
  }

  .hero-split__img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    transition: transform 500ms ease;
  }

  .hero-split__media:hover .hero-split__img {
    transform: scale(1.03);
  }

  .hero-split__runtime {
    position: absolute;
    top: 16px;
    left: 16px;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(0, 0, 0, 0.85);
    color: var(--white);
    font-size: 0.8125rem;
    font-weight: 600;
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 1024px) {
    .hero-mosaic__container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero-mosaic__dek {
      max-width: 100%;
    }

    .hero-half__wrapper,
    .hero-split__grid {
      grid-template-columns: 1fr;
    }

    .hero-half__collage {
      min-height: 500px;
    }
  }

  @media (max-width: 768px) {
    .hero-mosaic {
      padding: 3rem 0;
    }

    .hero-mosaic__play {
      width: 60px;
      height: 60px;
    }

    .hero-mosaic__play svg {
      width: 20px;
      height: 20px;
    }

    .hero-mosaic__scroll {
      bottom: 2rem;
    }

    .hero-full__media {
      height: 70vh;
      min-height: 500px;
    }

    .hero-half__collage {
      min-height: 400px;
    }

    .hero-half__content {
      padding: 2rem 1.5rem;
    }

    .hero-split {
      padding: 1.5rem;
    }
  }
</style>

<script>
  // Scroll indicator functionality
  const scrollBtn = document.querySelector('.hero-mosaic__scroll');
  if (scrollBtn) {
    scrollBtn.addEventListener('click', () => {
      const todaysMix = document.getElementById('todays-mix');
      if (todaysMix) {
        todaysMix.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  }
</script>