---
// NewsLayout.astro - Separate layout component for News section
const { featured, items = [] } = Astro.props;
---

<div class="layout-news">
  {featured && (
    <article class="hero-feature">
      <a href={featured.href} class="hero-feature__link">
        <div class="hero-feature__media">
          <img src={featured.thumbnail} alt={featured.title} loading="lazy" />
          {featured.runtime && (
            <div class="badge">
              <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                <path d="M2 1.5v9l8-4.5-8-4.5z" fill="currentColor"/>
              </svg>
              <span>{featured.runtime}</span>
            </div>
          )}
        </div>
        <div class="hero-feature__content">
          <span class="category">{featured.category}</span>
          <h3 class="hero-feature__title">{featured.title}</h3>
          <p class="hero-feature__dek">{featured.dek}</p>
          <div class="byline">{featured.byline}</div>
        </div>
      </a>
    </article>
  )}
  
  <div class="news-grid">
    {items.slice(0, 6).map((item) => (
      <article class="news-card">
        <a href={item.href} class="news-card__link">
          <div class="news-card__media">
            <img src={item.thumbnail} alt={item.title} loading="lazy" />
          </div>
          <div class="news-card__content">
            <span class="category-small">{item.category}</span>
            <h4 class="news-card__title">{item.title}</h4>
            <div class="byline-small">{item.byline}</div>
          </div>
        </a>
      </article>
    ))}
  </div>
</div>

<style>
  .layout-news {
    display: grid;
    gap: 3rem;
  }

  .hero-feature {
    background: var(--surface);
    border: 3px solid var(--text);
    overflow: hidden;
  }

  .hero-feature__link {
    display: grid;
    grid-template-columns: 60% 1fr;
    text-decoration: none;
    color: inherit;
    transition: transform 200ms ease;
  }

  .hero-feature:hover .hero-feature__link {
    transform: translateY(-4px);
  }

  .hero-feature__media {
    position: relative;
    background: var(--text);
    min-height: 400px;
  }

  .hero-feature__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(20%);
    transition: filter 400ms ease;
  }

  .hero-feature:hover .hero-feature__media img {
    filter: grayscale(0%);
  }

  .badge {
    position: absolute;
    top: 16px;
    left: 16px;
    display: flex;
    align-items: center;
    gap: 6px;
    background: var(--midnight);
    color: #fff;
    padding: 8px 12px;
    font-weight: 800;
    font-size: 0.875rem;
    border: 2px solid #fff;
  }

  .hero-feature__content {
    padding: clamp(2rem, 4vw, 3rem);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
  }

  .category {
    display: inline-block;
    background: var(--midnight);
    color: #fff;
    padding: 4px 12px;
    font-size: 0.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transform: skewX(-5deg);
    width: fit-content;
  }

  .hero-feature__title {
    font-family: var(--font-serif);
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    position: relative;
    padding-bottom: 0.75rem;
  }

  .hero-feature__title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60%;
    height: 5px;
    background: var(--midnight);
    transform: skewX(-8deg);
  }

  .hero-feature__dek {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-muted);
    margin: 0;
  }

  .byline {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: auto;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .news-card {
    background: var(--surface);
    border: 3px solid var(--text);
    transition: transform 200ms ease, box-shadow 200ms ease;
  }

  .news-card:hover {
    transform: translateY(-4px);
    box-shadow: 6px 6px 0 var(--midnight);
  }

  .news-card__link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  .news-card__media {
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--text);
  }

  .news-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 400ms ease;
  }

  .news-card:hover .news-card__media img {
    transform: scale(1.05);
  }

  .news-card__content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .category-small {
    display: inline-block;
    background: var(--midnight);
    color: #fff;
    padding: 3px 8px;
    font-size: 0.65rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transform: skewX(-5deg);
    width: fit-content;
  }

  .news-card__title {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
  }

  .byline-small {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-top: auto;
  }

  @media (max-width: 1024px) {
    .news-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-feature__link {
      grid-template-columns: 1fr;
    }
    .news-grid {
      grid-template-columns: 1fr;
    }
  }
</style>