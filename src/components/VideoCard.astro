---
const {
  title,
  dek,
  byline,
  runtime,
  thumbnail,
  href = "#",
} = Astro.props;
---

<a href={href} class="group block">
  <div class="relative overflow-hidden bg-black/5">
    <img
      src={thumbnail}
      alt={title}
      loading="lazy"
      class="aspect-[4/3] w-full object-cover"
    />

    {runtime && (
      <div class="absolute bottom-3 right-3 rounded bg-black/75 px-2 py-1 text-xs text-white">
        {runtime}
      </div>
    )}
  </div>

  <div class="mt-5">
    <h3 class="text-xl leading-snug font-semibold">
      {title}
    </h3>

    {dek && (
      <p class="mt-3 text-[15px] leading-6 opacity-80">
        {dek}
      </p>
    )}

    {byline && <div class="mt-4 text-sm font-semibold">{byline}</div>}
  </div>
</a>